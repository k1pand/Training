        <Label x:Name="INN" Content="Label" HorizontalAlignment="Left" Margin="516,58,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <Label x:Name="KPP" Content="Label" HorizontalAlignment="Left" Margin="516,89,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
